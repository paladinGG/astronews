---
interface Props {
  apps: Array<{
    id: string;
    name: string;
    subtitle: string;
    ageRequirement: string;
    bestFor: string;
    safetyFeatures: string;
    whyTeensLoveIt: string;
    icon?: string;
  }>;
}

const { apps } = Astro.props;
---

<div class="social-apps-list space-y-4">
  {
    apps.map((app, index) => (
      <div class="app-item bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-300 hover:shadow-lg">
        <button
          class="w-full p-6 text-left focus:outline-none focus:ring-2 focus:ring-primary focus:ring-opacity-50"
          onclick={`toggleAppDetails('${app.id}')`}
          aria-expanded="false"
          aria-controls={`app-details-${app.id}`}
        >
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center text-white font-bold text-lg">
                  {app.name.charAt(0)}
                </div>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                  {index + 1}. {app.name}
                </h3>
                <p class="text-gray-600 dark:text-gray-300 text-sm mt-1">
                  {app.subtitle}
                </p>
              </div>
            </div>
            <div class="flex-shrink-0">
              <svg
                class="w-6 h-6 text-gray-400 transform transition-transform duration-200"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"
                />
              </svg>
            </div>
          </div>
        </button>

        <div
          id={`app-details-${app.id}`}
          class="app-details hidden px-6 pb-6 border-t border-gray-200 dark:border-gray-700"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-5 h-5 bg-green-100 dark:bg-green-900 rounded-full flex items-center justify-center mt-0.5">
                  <svg
                    class="w-3 h-3 text-green-600 dark:text-green-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div>
                  <span class="font-semibold text-gray-900 dark:text-white">
                    Age Requirement:
                  </span>
                  <span class="text-gray-600 dark:text-gray-300 ml-2">
                    {app.ageRequirement}
                  </span>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-5 h-5 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mt-0.5">
                  <svg
                    class="w-3 h-3 text-blue-600 dark:text-blue-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <span class="font-semibold text-gray-900 dark:text-white">
                    Best For:
                  </span>
                  <span class="text-gray-600 dark:text-gray-300 ml-2">
                    {app.bestFor}
                  </span>
                </div>
              </div>
            </div>

            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-5 h-5 bg-yellow-100 dark:bg-yellow-900 rounded-full flex items-center justify-center mt-0.5">
                  <svg
                    class="w-3 h-3 text-yellow-600 dark:text-yellow-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div>
                  <span class="font-semibold text-gray-900 dark:text-white">
                    Safety Features:
                  </span>
                  <span class="text-gray-600 dark:text-gray-300 ml-2">
                    {app.safetyFeatures}
                  </span>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-5 h-5 bg-pink-100 dark:bg-pink-900 rounded-full flex items-center justify-center mt-0.5">
                  <svg
                    class="w-3 h-3 text-pink-600 dark:text-pink-400"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </div>
                <div>
                  <span class="font-semibold text-gray-900 dark:text-white">
                    Why Teens Love It:
                  </span>
                  <span class="text-gray-600 dark:text-gray-300 ml-2">
                    {app.whyTeensLoveIt}
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>

<script>
  function toggleAppDetails(appId: string) {
    const detailsElement = document.getElementById(`app-details-${appId}`);
    const button = detailsElement?.previousElementSibling as HTMLButtonElement;
    const arrow = button?.querySelector("svg");

    if (detailsElement && button && arrow) {
      const isExpanded = button.getAttribute("aria-expanded") === "true";

      // Toggle visibility
      detailsElement.classList.toggle("hidden");

      // Update ARIA attributes
      button.setAttribute("aria-expanded", (!isExpanded).toString());

      // Rotate arrow
      arrow.style.transform = isExpanded ? "rotate(0deg)" : "rotate(180deg)";
    }
  }
</script>

<style>
  .app-item:hover {
    transform: translateY(-2px);
  }

  .app-details {
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

