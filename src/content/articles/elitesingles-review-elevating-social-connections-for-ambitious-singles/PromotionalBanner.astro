---
// Promotional Banner Component for EliteSingles
---

<div
  class="elitesingles-promo bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 border border-blue-200 dark:border-gray-700 rounded-xl shadow-xl p-8 mb-8 relative overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div
      class="absolute top-0 left-0 w-32 h-32 bg-blue-500 rounded-full -translate-x-16 -translate-y-16"
    >
    </div>
    <div
      class="absolute bottom-0 right-0 w-24 h-24 bg-purple-500 rounded-full translate-x-12 translate-y-12"
    >
    </div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10">
    <!-- Header Section -->
    <div class="text-center mb-6">
      <div
        class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl shadow-lg mb-4"
      >
        <div class="text-center">
          <div class="text-white font-serif text-xl font-bold leading-tight">
            Elite
          </div>
          <div class="text-white text-xs font-semibold tracking-wider">
            SINGLES
          </div>
        </div>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
        Professional Dating Platform
      </h2>
      <p class="text-gray-600 dark:text-gray-300">
        Connect with ambitious professionals worldwide
      </p>
    </div>

    <!-- Promotional Card -->
    <div
      class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden"
    >
      <!-- Urgency Bar -->
      <div
        class="bg-gradient-to-r from-orange-500 to-red-500 text-white px-6 py-4"
      >
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-yellow-300 rounded-full animate-pulse"></div>
            <span class="font-bold text-sm uppercase tracking-wide"
              >Limited Time Offer</span
            >
            <span class="text-yellow-200">|</span>
            <span id="countdown" class="font-semibold text-sm"
              >Only 10 hours 23 m 54 s Left!</span
            >
          </div>
          <div class="flex items-center space-x-2">
            <span class="text-xs">ðŸ”¥</span>
            <span class="text-xs font-medium">HOT DEAL</span>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="flex-shrink-0">
              <div
                class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-md"
              >
                <div class="text-center">
                  <div
                    class="text-white font-serif text-lg font-bold leading-tight"
                  >
                    Elite
                  </div>
                  <div class="text-white text-xs font-semibold">SINGLES</div>
                </div>
              </div>
            </div>
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
                EliteSingles
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-2">
                Premium dating for ambitious professionals
              </p>
              <div
                class="flex items-center space-x-4 text-xs text-gray-500 dark:text-gray-400"
              >
                <span class="flex items-center">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-1"></span>
                  Verified Profiles
                </span>
                <span class="flex items-center">
                  <span class="w-2 h-2 bg-blue-500 rounded-full mr-1"></span>
                  Global Network
                </span>
              </div>
            </div>
          </div>

          <!-- CTA Button -->
          <div class="flex-shrink-0">
            <a
              href="https://www.elitesingles.com"
              target="_blank"
              rel="noopener noreferrer"
              class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1"
            >
              <span class="mr-3">Visit Site</span>
              <svg
                class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-200"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Features List -->
        <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-700">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-center space-x-2">
              <svg
                class="w-4 h-4 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300"
                >Personality Matching</span
              >
            </div>
            <div class="flex items-center space-x-2">
              <svg
                class="w-4 h-4 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300"
                >Professional Users</span
              >
            </div>
            <div class="flex items-center space-x-2">
              <svg
                class="w-4 h-4 text-green-500"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700 dark:text-gray-300"
                >Secure & Private</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Enhanced Countdown Timer
  (function () {
    // Set the end time once when the script loads
    const now = new Date();
    const endTime = new Date(
      now.getTime() + 10 * 60 * 60 * 1000 + 23 * 60 * 1000 + 54 * 1000,
    );

    function updateCountdown() {
      const currentTime = new Date();
      const timeLeft = endTime - currentTime;

      if (timeLeft > 0) {
        const hours = Math.floor(timeLeft / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        const countdownElement = document.getElementById("countdown");
        if (countdownElement) {
          countdownElement.textContent = `Only ${hours} hours ${minutes} m ${seconds} s Left!`;

          // Add urgency effect when time is running low
          if (hours < 2) {
            countdownElement.classList.add("animate-pulse", "text-yellow-200");
          }
        }
      } else {
        const countdownElement = document.getElementById("countdown");
        if (countdownElement) {
          countdownElement.textContent = "Offer Expired!";
          countdownElement.classList.add("text-red-300", "font-bold");
        }
      }
    }

    // Update countdown every second
    updateCountdown();
    setInterval(updateCountdown, 1000);
  })();
</script>
